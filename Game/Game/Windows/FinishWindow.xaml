<Window x:Class="Game.FinishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinishWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="WinnerTextBlock" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="PlayAgainButton" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Padding="10, 5" FontSize="16" Content="Играть снова" Click="PlayAgainButton_Click"/>
    </Grid>
</Window>
